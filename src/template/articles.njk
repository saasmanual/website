<html lang="en">
<head>
  {% include './include/head.njk' %}
</head>
<body>
  {% include './include/navigation.njk' %}
  <div class="relative max-w-7xl mx-auto mt-24 pb-24 px-4 md:px-0">
    <div class="text-center">
      <h2 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl">
        SaaS Manual articles
      </h2>
      <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500 sm:mt-4">
        Welcome to the world of building SaaS products.
      </p>
    </div>
    <div class="mt-12 max-w-lg mx-auto grid gap-5 lg:grid-cols-3 lg:max-w-none text-gray-700">
      {% for item in posts %}
      <div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
        <div class="flex-shrink-0">
          <a href="{{ item.link }}">
            <img class="h-48 w-full object-cover" src="/assets/img/{{item.cover}}" alt="">
          </a>
        </div>
        <div class="flex-1 bg-white p-6 flex flex-col justify-between">
          <div class="flex-1">
            <p class="text-sm font-medium text-indigo-600">
              <a href="{{ item.link }}" class="hover:underline">
                Article
              </a>
            </p>
            <a href="{{ item.link }}" class="block mt-2">
              <p class="text-xl font-semibold text-gray-900">
                {{item.title}}
              </p>
              <p class="mt-3 text-base text-gray-500">
                {{item.excerpt | safe}}
              </p>
            </a>
          </div>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <a href="#">
                <span class="sr-only">Roel Aufderehar</span>
                <img class="h-10 w-10 rounded-full" src="{{ item.author.avatar }}" alt="">
              </a>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">
                <a href="#" class="hover:underline">
                  {{item.author.fullName}}
                </a>
              </p>
              <div class="flex space-x-1 text-sm text-gray-500">
                <time datetime="2020-03-16">
                  {{item.date}}
                </time>
                <span aria-hidden="true">
                  &middot;
                </span>
                <span>
                  {{item.readingTime}}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</body>
</html>
