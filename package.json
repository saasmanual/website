{
  "name": "@saasmanual/website",
  "version": "0.0.1",
  "description": "SaaS Manual website",
  "main": "index.js",
  "scripts": {
    "dev": "npm run watch & npm run serve",
    "serve": "livery -p 5001 -w './build/**/*' ./build ",
    "watch": "chokidar 'src/**/*' -c 'npm run build:website'",
    "build": "NODE_ENV=production rm -rf build && npm run build:assets && npm run build:css && npm run build:website",
    "build:website": "node -r esm index.js",
    "build:assets": "mkdir -p ./build/assets && cp -r ./src/assets ./build",
    "build:css": "postcss ./src/static/css/style.css -c postcss.config.js -o build/static/css/layout.css",
    "build:sitemap": "node -r esm ./lib/sitemap.js",
    "cdk:deploy": "npx cdk deploy --profile 366378881925_AdministratorAccess",
    "cdk:destroy": "npx cdk destroy --profile 366378881925_AdministratorAccess"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saasmanual/website.git"
  },
  "keywords": [
    "SaaS",
    "Manual"
  ],
  "author": "Nikolai Onken",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/saasmanual/website/issues"
  },
  "homepage": "https://github.com/saasmanual/website#readme",
  "dependencies": {
    "@aws-cdk/core": "^1.74.0",
    "@saasmanual/generator": "0.0.4"
  },
  "devDependencies": {
    "chokidar-cli": "^2.1.0",
    "livery": "^4.0.0",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^2.0.1"
  }
}
