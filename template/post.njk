<html>
<head>
  {% include './include/head.njk' %}

  <meta property="og:site_name" content="SaaS Manual">
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ excerpt }}">
  {% if cover %}
  <meta property="og:image" content="https://saasmanual.com/assets/img/{{ cover }}">
  {% endif %}
  {# <meta property="og:url" content="https://saasmanual.com/{{ post }}"> #}
  {# <meta name="twitter:card" content="summary_large_image"> #}
  {# <meta name="twitter:image:alt" content="Alt text for image"> #}
  {# <meta property="fb:app_id" content="your_app_id" /> #}
  {# <meta name="twitter:site" content="@website-username"> #}
</head>
<body>
  {% include './include/navigation.njk' %}
  {% if cover %}
  <div class="h-96 overflow-hidden"> 
    <img src="/assets/img/{{ cover }}" class="w-full h-full object-cover object-center" />
  </div>
  {% endif %}
  <div class="max-w-prose prose prose-pink prose-lg text-gray-700 mx-auto mt-12 pb-24 px-4 md:px-0">
    <h1>{{ title }}</h1>
    {{ content|safe }}
  </div>
</body>
</html>
